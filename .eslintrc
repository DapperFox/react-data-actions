{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "space-before-function-paren": [2, "always"],
    "func-names": 0,
    "no-else-return": 0,
    "arrow-spacing": 2,
    "react/prop-types": 2,
    "arrow-body-style": 0,
    "react/prefer-stateless-function": 0,
    "max-len": [2, 150, 2, {
      "ignoreUrls": true,
      "ignoreComments": false
    }],
    "react/jsx-no-bind": [1, {
      "ignoreRefs": true,
      "allowArrowFunctions": false,
      "allowBind": false,
    }],
    "react/sort-comp": [2, {
      "order": [
        "propTypes",
        "connectedActions",
        "constructor",
        "lifecycle",
        "/^build.+$/",
        "/^on.+$/",
        "/^(get|set)(?!(InitialState$|DefaultProps$|ChildContext$)).+$/",
        "render",
        "/^render.+$/",
        "everything-else"
      ]
    }]
  },
  "ecmaFeatures": {
    "experimentalObjectRestSpread": true
  }
}
